<!-- views/contacts/show.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="contact contact-show">
      <h2>Show</h2>
      <div>
        <h3><%= rows[0].name %></h3>
        <label>Email:  </label><span><%= rows[0].email %></span>
        <br>
        <label>Phone: </label><span><%= rows[0].phone %></span>
      </div>
      <div class="contact-menu">
        <a href="/contacts/<%= rows[0].name %>/edit">Edit</a> <!-- 1 -->
        <form action="/contacts/<%= rows[0].name %>?_method=delete" method="post"> <!-- 2 -->
          <a href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
        </form>
      </div>
    </div>
  </body>
</html>
